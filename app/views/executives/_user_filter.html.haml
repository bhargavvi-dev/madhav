.filterTop
  .row
    = form_for '', :url => user_filter_executives_path, :method => 'post', :html => {:id => "filterFormId"}, :remote => true do
      = hidden_field_tag 'role', role
      .col-xs-12.col-sm-6
        = text_field_tag :search, session[:executive_search],:class => "form-control",placeholder: t("general.search_name_or_city")
      .col-xs-12.col-sm-6
        = select_tag "order", options_for_select([[t('general.ascending'), 'ASC'], [t('general.descending'), 'DESC']]), prompt: t('general.order'), :class => "form-control"
    %div{id: 'loader-image', class: 'loader'}
      = image_tag 'loader-small.gif'