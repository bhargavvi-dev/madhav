.container
  #set_flash_message
  .formField
    .row
      #registration-form.col-xs-12
        = render "form_step_#{@step.to_s}"
  - if @step.to_i == 1
    #OrderEmailModal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
      .modal-dialog.modal-lg{:role => "document"}
        .modal-content
          .modal-body            
            = render :partial => "emails/form_email", :locals => {:object => @executive}
  - if @step.to_i == 3 or @step.to_i == 5
    #LoginInfoEmailModal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
      .modal-dialog.modal-lg{:role => "document"}
        .modal-content
          .modal-body
          = render :partial => "emails/form_login_info_email", :locals => {:object => @executive}
  - if @step.to_i == 4
    - @executive.clinic_users.each do |clinic|
      - if clinic.is_commited_own_laboratory == true and clinic.is_own_laboratory_fee == true
        .modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1", :id => "PaymentRuleModal_#{clinic.id}"}
          .modal-dialog.modal-lg{:role => "document"}
            .modal-content
              .modal-body
                = render :partial => "send_bills/change_payment_rule", :locals => {:object => @executive, clinic: clinic}           