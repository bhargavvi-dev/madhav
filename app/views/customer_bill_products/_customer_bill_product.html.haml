.col-xs-12.col-sm-6.col-md-4.col-10
  .rxBox
    .rxHeader
      .rxTitle= customer_bill_product.name
      .rxLogo
        = image_tag "customer_bill_product_register.png"
    .rxContent
      .row.row5
        .col-xs-12.col-sm-6
          .rxDesc
            %span= t('customer_bill_product.name')
            .rxValue= customer_bill_product.name
        .col-xs-12.col-sm-6
          .rxDesc
            %span= t('customer_bill_product.person_name')
            .rxValue= customer_bill_product.person_name                  
        .col-xs-12
          .rxDesc
            %span= t('customer_bill_product.mobile_number1')
            .rxValue= customer_bill_product.mobile_number1
        .col-xs-12
          .rxDesc
            %span= t('customer_bill_product.mobile_number2')
            .rxValue= customer_bill_product.mobile_number2
        .col-xs-12.col-sm-6
          .rxDesc
            %span= t('customer_bill_product.gst_number')
            .rxValue= customer_bill_product.gst_number
    .rxBottom
      %a.rxNextBtn{:href => customer_bill_product_path(customer_bill_product) }
        = t("customer_bill_product.open_card")
        %i.fa.fa-angle-double-right