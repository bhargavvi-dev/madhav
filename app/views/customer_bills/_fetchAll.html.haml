.scroll.row.row-10
  .col-xs-12.col-sm-6.col-md-4.col-10
    %a.rxBox.addNew{:href => new_customer_bill_path}
      .rxImage
        = image_tag "add_dark.png"
      .rxBottom
        .rxAddNewBtn
          %i.fa.fa-plus-circle
          = t("customer_bill.register_customer_bill")
  - if @customer_bills.present?
    - @customer_bills.each do |customer_bill|
      = render :partial => 'customer_bill', :locals => {customer_bill: customer_bill}
    - if @customer_bills.count > Settings.system.per_page
      = link_to next_users_customer_bills_path(2), :remote => true, :class => "loadMore jscroll-next" do
        %i.downArrow
        = t("general.next")
  - else
    .col-xs-12.col-sm-6.col-md-4.col-10.alert.alert-warning
      %span= t('general.no_record_found')