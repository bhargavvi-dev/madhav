.container
  .row
    .col-xs-12#registration-form
      %table.tableForm{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
        %tbody
          %tr
            %td#stepBtnHeight.leftCol{:width => "80%"}
              .formBox.view-details
                .formHeader.clearfix
                  %h1
                    = "Customer card"

                .row.row10
                  .col-xs-12.col-md-6
                    .card-row
                      %label.label-view
                        %span
                          = t('customer.name')
                      %label.label-value= @customer.name
                    .card-row
                      %label.label-view
                        %span= t('user.person_name')
                      %label.label-value= @customer.person_name
                  .col-xs-12.col-md-6
                    .card-row
                      %label.label-view
                        %span= t('user.mobile_number 1')
                      %label.label-value= @customer.mobile_number1
                    .card-row
                      %label.label-view
                        %span= t('user.mobile_number 2')
                      %label.label-value= @customer.mobile_number2
                  .col-xs-12.col-md-6
                    .card-row
                      %label.label-view
                        %span= t('user.gst_number')
                      %label.label-value= @customer.gst_number
                    .card-row
                      %label.label-view
                        %span= t('user.address')
                      %label.label-value= @customer.address
                  .col-xs-12.col-md-6
                    .card-row
                      %label.label-view
                        %span= t('user.city')
                      - if @customer.city
                        %label.label-value= @customer.city.name
                      - else
                        = "-"
                    .card-row
                      %label.label-view
                        %span= t('user.area')
                      - if @customer.area
                        %label.label-value= @customer.area.name
                      - else
                        = "-"                   
          %td.stepBtnGroup{:width => "20%"}
            %a.h15.stepBtn.backBtn{:href => customers_path}
              %span= t("form_action_button.return_button")
              = image_tag "back_btn.png", :class => "mt15"
            %a.h15.stepBtn.nextBtn{:href => edit_customer_path(@customer, :step => 1), :action => :open_card_param }
              %span= t("form_action_button.edit_basic_information")
              = image_tag "save_and_next_btn.png", :class => "mt15"