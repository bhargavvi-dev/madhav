<% if (@feedback and @feedback.errors.any?) or @error.present? %>
  <% error_msg = @error.present? ? t('general.data_invalid_or_required') : @feedback.errors.full_messages.first %>
  setFlashMessage("feedback_notice", "feedback_notice_flash_msg", "<%= error_msg %>");
<% else %>
  $("#feedback_subject_bug").prop('checked', true);
  $("#feedback_message").val('');
  $("#feedbackModal").modal('hide');
  $("#feedbackSuccessModal").modal();
<% end %>
$("#loader-image, .pre-icon").hide();